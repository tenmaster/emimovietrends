<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/movies_item_margin"
    android:background="@drawable/rounded_background"
    android:orientation="horizontal"
    android:padding="@dimen/movies_item_padding">

    <ImageView
        android:id="@+id/item_movie_image"
        android:layout_width="@dimen/movies_item_image_size"
        android:layout_height="@dimen/movies_item_image_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_movie_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Movie Title" />

        <TextView
            android:id="@+id/item_movie_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_star_drawable"
            android:drawablePadding="@dimen/movies_item_drawable_padding"
            tools:text="Vote Average" />
    </LinearLayout>
</LinearLayout>